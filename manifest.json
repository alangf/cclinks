{
    "name": "Caracas Chronicles links",
    "description": "Underlines links in caracaschronicles.com's posts and comments and opens any link in a new tab.",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
          "matches": ["http://caracaschronicles.com/*", "http://www.caracaschronicles.com/*"], 
          "css" : ["style.css"],
          "js" : ["scripts.js"]
        }
    ],
    "icons": { "16": "icon_16.png",
               "48": "icon_48.png",
              "128": "icon_128.png" },
    "manifest_version" : 2
  }
